---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import Icon from '../components/Icon.astro';
import { 
  ArrowRight, 
  CircleDollarSign, 
  Clock, 
  FileVideo, 
  Sparkles,
  Zap,
  Star,
  Target,
  Heart,
  Check
} from 'lucide-react';

const title = "Zebracat AI - Rebel Against Ordinary Content Creation";
const description = "Break free from boring content! AI-powered video generation for passionate creators demanding extraordinary results.";

---

<Layout title={title}>
  <!-- Header with Logo -->
  <header class="fixed top-0 left-0 right-0 z-50 bg-bg-dark shadow-lg">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="flex h-20 items-center justify-between">
        <div class="flex items-center gap-4 lg:gap-8">
          <a href="/" class="group hover:opacity-90 transition-all duration-300 flex items-center gap-4">
            <img 
              src="https://landing-page-images-seo.s3.eu-north-1.amazonaws.com/zebracat+ai.jpg" 
              alt="Zebracat AI" 
              class="h-12 w-auto rounded-full border-2 border-secondary-light/20 group-hover:border-secondary/40 transition-all" 
            />
            <span class="text-xl lg:text-2xl font-display font-bold text-text-title group-hover:text-secondary">Zebracat AI</span>
          </a>
          <!-- Trusted By Logos -->
          <div class="hidden lg:flex items-center gap-6">
            <span class="text-sm font-medium text-accent/80">Trusted by:</span>
            <div class="flex gap-6">
              <img src="https://landing-page-images-seo.s3.eu-north-1.amazonaws.com/microsoftLogo.webp" 
                   alt="Microsoft" 
                   class="h-6 brightness-0 invert opacity-80 hover:opacity-100 transition-all duration-300" />
              <img src="https://landing-page-images-seo.s3.eu-north-1.amazonaws.com/Google_2015_logo.svg.webp" 
                   alt="Google" 
                   class="h-6 brightness-0 invert opacity-80 hover:opacity-100 transition-all duration-300" />
              <img src="https://landing-page-images-seo.s3.eu-north-1.amazonaws.com/IBM_logo.svg.png" 
                   alt="IBM" 
                   class="h-6 brightness-0 invert opacity-80 hover:opacity-100 transition-all duration-300" />
            </div>
          </div>
        </div>

        <!-- CTA Button -->
        <a href="http://studio.zebracat.ai/signup/?via=maxime-emmanuel" 
           class="btn-primary px-6 py-2.5 text-sm lg:text-base"
           aria-label="Start creating with Zebracat AI">
          Start Creating Now
          <span class="ml-2">→</span>
        </a>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-b from-primary-dark via-primary to-primary-light/90">
    <!-- Dynamic Background -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-b from-primary-dark to-primary opacity-90"></div>
      <div class="absolute inset-0 bg-[url('/hero-pattern.svg')] opacity-20 animate-float"></div>
    </div>

    <div class="container mx-auto px-4 lg:px-6 pt-32 pb-20 text-center relative z-10">
      <!-- Trust Badges -->
      <div class="mb-12 flex justify-center gap-4 lg:gap-6 flex-wrap">
        <span class="rounded-full bg-bg-dark/50 backdrop-blur-md border border-accent/20 px-6 py-2.5 text-sm font-medium text-accent shadow-md hover:bg-bg-dark/60 transition-all duration-300">
          Zebracat AI Rated 4.8/5 on TrustPilot • The #1 Choice for Creators!
        </span>
      </div>

      <!-- Hero Content -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 text-gradient">
        Rebel Against Ordinary<br />Content Creation
      </h1>

      <p class="text-lg md:text-xl lg:text-2xl text-text-body mb-12 max-w-3xl mx-auto">
        Break free from boring content! AI-powered video generation for passionate creators demanding extraordinary results.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
        <a href="http://studio.zebracat.ai/signup/?via=maxime-emmanuel"
           class="btn-primary px-8 py-4 text-lg w-full sm:w-auto"
           aria-label="Start creating with Zebracat AI">
          Start Creating Now
          <span class="ml-2">→</span>
        </a>
        <a href="#how-it-works"
           class="btn-secondary px-8 py-4 text-lg w-full sm:w-auto"
           aria-label="Learn how Zebracat AI works">
          See How It Works
        </a>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="stat-card group">
          <div class="text-4xl font-bold text-gradient mb-2">98%</div>
          <p class="text-accent/90 group-hover:text-accent transition-colors">Customer Satisfaction</p>
        </div>
        <div class="stat-card group">
          <div class="text-4xl font-bold text-gradient mb-2">50K+</div>
          <p class="text-accent/90 group-hover:text-accent transition-colors">Active Users</p>
        </div>
        <div class="stat-card group">
          <div class="text-4xl font-bold text-gradient mb-2">1M+</div>
          <p class="text-accent/90 group-hover:text-accent transition-colors">Videos Generated</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Fixed CTA Button -->
  <div class="fixed bottom-8 right-8 z-50">
    <a href="http://studio.zebracat.ai/signup/?via=maxime-emmanuel"
       class="btn-primary flex items-center gap-2 px-6 py-3 text-lg shadow-xl hover:scale-105"
       aria-label="Start creating with Zebracat AI">
      Try Zebracat AI
      <span class="ml-2">→</span>
    </a>
  </div>

  <!-- Social Proof Section -->
  <section id="benefits" class="bg-gradient-primary py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        <div class="text-center transform hover:scale-105 transition-all duration-300">
          <h3 class="text-4xl font-bold text-white">95 </h3>
          <p class="text-white font-medium">Faster Video Creation</p>
        </div>
        <div class="text-center transform hover:scale-105 transition-all duration-300">
          <h3 class="text-4xl font-bold text-white">70 </h3>
          <p class="text-white font-medium">Cost Reduction</p>
        </div>
        <div class="text-center transform hover:scale-105 transition-all duration-300">
          <h3 class="text-4xl font-bold text-white">2M+ </h3>
          <p class="text-white font-medium">Videos Created</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-bg-dark/50">
    <div class="container mx-auto px-4">
      <h2 class="mb-12 text-center text-3xl md:text-4xl font-display font-bold text-text-title">
        Transform Your Content with AI Power 
      </h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        <div class="stat-card group">
          <h3 class="mb-4 text-xl font-display font-semibold text-text-title">Text-to-Video Conversion</h3>
          <p class="text-accent/90 group-hover:text-accent transition-colors">Transform text prompts, scripts, or articles into engaging videos using AI. Combine your footage or AI visuals with lifelike voiceovers and effects.</p>
        </div>
        <div class="stat-card group">
          <h3 class="mb-4 text-xl font-display font-semibold text-text-title">AI Scene Generation</h3>
          <p class="text-accent/90 group-hover:text-accent transition-colors">Generate AI scenes in any style from text. Create unique, branded content that resonates with your audience.</p>
        </div>
        <div class="stat-card group">
          <h3 class="mb-4 text-xl font-display font-semibold text-text-title">Automated Video Editing</h3>
          <p class="text-accent/90 group-hover:text-accent transition-colors">Reduce editing time from 4 hours per minute to mere seconds. Our AI masters techniques to boost viewer engagement.</p>
        </div>
