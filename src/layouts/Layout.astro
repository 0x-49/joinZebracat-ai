---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Zebracat AI - Revolutionary AI-Powered Video Creation" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="https://landing-page-images-seo.s3.eu-north-1.amazonaws.com/zebracat+ai.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    :root {
      --color-accent: theme('colors.secondary');
      --color-accent-dark: theme('colors.secondary-dark');
      --color-accent-light: theme('colors.secondary');
    }

    html {
      scroll-behavior: smooth;
      @apply antialiased;
    }

    body {
      @apply bg-primary-dark text-text-body min-h-screen font-body;
      background: linear-gradient(to bottom, theme('colors.primary-dark'), theme('colors.primary'));
    }

    h1, h2, h3, h4, h5, h6 {
      @apply text-text-title font-display font-bold tracking-tight;
    }

    p {
      @apply text-text-body leading-relaxed;
    }

    a {
      @apply text-text-title hover:text-primary-light transition-all duration-300;
    }

    /* Improved Mobile Typography */
    @screen sm {
      h1 { @apply text-4xl leading-tight; }
      h2 { @apply text-3xl leading-tight; }
      h3 { @apply text-2xl leading-snug; }
      p { @apply text-base leading-relaxed; }
    }

    @screen md {
      h1 { @apply text-5xl; }
      h2 { @apply text-4xl; }
      h3 { @apply text-3xl; }
      p { @apply text-lg; }
    }

    @screen lg {
      h1 { @apply text-6xl; }
      h2 { @apply text-5xl; }
      h3 { @apply text-4xl; }
      p { @apply text-xl; }
    }
  }

  @layer components {
    .text-gradient {
      @apply bg-gradient-to-r from-accent to-secondary bg-clip-text text-transparent;
    }

    .bg-gradient-primary {
      @apply bg-gradient-to-b from-primary-dark to-primary;
    }

    .bg-gradient-secondary {
      @apply bg-gradient-to-r from-secondary to-secondary-dark;
    }

    .container {
      @apply px-4 mx-auto sm:px-6 lg:px-8;
      max-width: 1280px;
    }

    .btn {
      @apply inline-flex items-center justify-center
             px-6 py-3 rounded-full font-semibold
             transform transition-all duration-300
             focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-primary-dark
             active:scale-95 hover:scale-105;
    }

    .btn-primary {
      @apply btn bg-secondary hover:bg-secondary-dark text-text-title
             shadow-md hover:shadow-lg
             focus:ring-secondary focus:ring-offset-2
             border border-secondary-light/20 hover:border-secondary-light/40;
    }

    .btn-secondary {
      @apply btn bg-bg-dark/50 hover:bg-bg-dark/70 text-text-body
             backdrop-blur-sm border border-accent/10 hover:border-accent/20
             shadow-md hover:shadow-lg
             focus:ring-accent/30;
    }

    .stat-card {
      @apply bg-bg-dark/50 backdrop-blur-sm rounded-xl p-6
             border border-accent/10 hover:border-accent/20
             transform transition-all duration-300 hover:-translate-y-1
             hover:bg-bg-dark/60 shadow-md hover:shadow-lg;
    }
  }
</style>
